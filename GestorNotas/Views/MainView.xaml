<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GestorNotas.ViewModels"
             x:Class="GestorNotas.Views.MainView"
             Title="Gestor de Notas">

    <ContentPage.BindingContext>
        <vm:NotaViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry Placeholder="TÃ­tulo" Text="{Binding Titulo}" />
            <Editor Placeholder="Contenido" HeightRequest="100" Text="{Binding Contenido}" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Agregar" Command="{Binding AgregarCommand}" />
                <Button Text="Editar" Command="{Binding EditarCommand}" />
                <Button Text="Eliminar" Command="{Binding EliminarCommand}" />
                <Button Text="Compartir" Command="{Binding CompartirCommand}" />
            </HorizontalStackLayout>

            <Entry Placeholder="Buscar..." Text="{Binding TextoBusqueda}" />
            <Button Text="Buscar" Command="{Binding BuscarCommand}" />

            <CollectionView ItemsSource="{Binding ListaNotas}"
                            SelectionMode="Single"
                            SelectedItem="{Binding NotaSeleccionada}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray">
                            <VerticalStackLayout>
                                <Label Text="{Binding Titulo}" FontAttributes="Bold" />
                                <Label Text="{Binding Contenido}" FontSize="Small" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
